{
    "name": "sonolus-pjsekai-engine-extended",
    "version": "0.2.0",
    "description": "A recreation of Project Sekai: Colorful Stage! engine in Sonolus",
    "author": "Nanashi. and NonSpicyBurrito",
    "repository": "github:sevenc-nanashi/sonolus-pjsekai-engine-extended",
    "license": "MIT",
    "keywords": [
        "Sonolus"
    ],
    "main": "dist",
    "files": [
        "dist"
    ],
    "scripts": {
        "lint": "tsc -p . --noEmit && eslint --ext .ts src/",
        "serve": "nodemon --watch src --exec \"ts-node ./src/serve.ts\" --ext .ts,.sus",
        "build": "ts-node ./src/build && tsc -p ./tsconfig.lib.json",
        "postinstall": "ts-node ./src/build && tsc -p ./tsconfig.lib.json || true"
    },
    "dependencies": {
        "@types/fs-extra": "^9.0.13",
        "fs-extra": "^10.1.0",
        "sonolus-core": "^6.0.0",
        "sonolus-express": "^5.0.0",
        "sonolus.js": "^8.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    },
    "devDependencies": {
        "@tsconfig/node16": "^1.0.3",
        "@typescript-eslint/eslint-plugin": "^5.44.0",
        "@typescript-eslint/parser": "^5.44.0",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "prettier-plugin-organize-imports": "^3.2.0",
        "ts-node-dev": "^2.0.0"
    },
    "optionalDependencies": {
        "fsevents": "*"
    }
}
